    type = "vector" url = pmtiles
    attribution = "WHO / OCHA"
  }
}
layers = new Listing {
  new {
    id = "background" type = "background"
    paint { `background-color` = background_color }
  }
  new Adm { id = "adm0" }
  new Adm { id = "adm1" }
  new Adm { id = "adm2" }
  new Adm { id = "adm3" }
  new {
    id = "bndl" type = "line" source = "a"
    `source-layer` = "bndl"
    paint { `line-color` = background_color `line-width` = 1 }
  }
}
