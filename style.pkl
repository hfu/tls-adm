hidden pmtiles = "pmtiles://a.pmtiles"
hidden background_color = "#333"
const red = "#da291c" // Pantone 485
const yellow = "#ffc72c" // Pantone 123

class Adm {
  id: String? `source-layer` = id
  source = "a" type = "fill"
  paint { `fill-color` = red }
}

version = 8
zoom = 7.98
center = new Listing { 125.629 -8.938 }
sources {
